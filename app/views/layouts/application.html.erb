<%
	title ||= 'OpenMRS'
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html lang="en" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title><%= title || 'No Title' %></title>
		<%= stylesheet_link_tag 'jquery-ui-1.8.2.custom',
			'datatables_jui',
			'openmrs' %>
		<%= javascript_include_tag 'jquery-1.4.2.min.js',
			'jquery-ui-1.8.2.custom.min.js',
			'jquery.dataTables.min.js',
			'jquery.jqDock.min.js' %>
		<script type="text/javascript">
			$(document).ready(function() {
				$('#patient-search-button').click(function() {
					$('#patient-search').dialog('open');
				});
				$('#patient-search').dialog({
					modal: true,
					autoOpen: false,
					draggable: false,
					title: 'Find a patient',
					width: '80%',
					height: '600'
				});
				$('#menu-dock').jqDock({
					align: 'top',
					size: 32,
					labels: true
				});
			});
		</script>
	</head>
	<body>
		<div class="container">
			<div id="header">
				<div id="menu-dock-container">
					<div id="menu-dock">
						<a href="/">
							<img src="/images/openmrs-logo-64.png" title="Home"/>
						</a>
						<img src="/images/search-64.png" id="patient-search-button" title="Find patient"/> 
					</div>
				</div>
				
				<div id="patient-search" style="display:none">
					<%= render :partial => "widgets/patient_search" %>
				</div>
			
				OpenMRS on Rails via JRuby!
			</div>
			<div id="content">
				<%= yield %>
			</div>
		</div>
	</body>
</html>
